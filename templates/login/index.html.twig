{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block principal %}
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 offset-lg-1">
                <h2>Login de usuarios</h2>
                <hr>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form action="{{ path('app_login') }}" method="post" class="contact-form">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="username">Usuario:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Ingrese su usuario">
                        </div>
                        <div class="col-lg-12 mt-3">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="_password" class="form-control" placeholder="Ingrese su contraseÃ±a">
                        </div>
                        <div class="col-lg-12 mt-4">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

{% endblock %}
