{% extends 'base.html.twig' %}

{% block title %}Eventos{% endblock %}

{% block principal %}
<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Eventos</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->

<!-- Blog Section Begin -->
<section class="blog-section blog-page spad">
    <div class="container">
        <div class="row">
            {% for event in events %}            
            <div class="col-lg-4 col-md-6">
                <div class="blog-item set-bg" data-setbg="{{ asset(event.getUrlSubidas()) }}">
                    <div class="bi-text">
                        <span class="b-tag">Travel Trip</span>
                        <h4><a href="{{ path('app_event_show', {'id': event.id}) }}">{{ event.nombre }}</a></h4>
                        <div class="b-time"><i class="icon_clock_alt"></i>{{ event.fecha }}</div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- Blog Section End -->

                    {# <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a> #}

{% endblock %}
